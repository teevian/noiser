{
    "file": {
        "settings": {
            "movable": "False",
            "floatable": "False",
            "position": "top"
        },
        "actions": [
            {
                "type": "button",
                "name": "New File",
                "icon": "./data/icons/ic_instance_new.svg",
                "status": "Creates new .IAD instance",
                "action": "onClick"
            },
            {
                "type": "button",
                "name": "Save File",
                "icon": "./data/icons/instance_save.svg",
                "status": "Save this .IAD instance",
                "action": "onClick"
            },
            {
                "type": "button",
                "name": "Load File",
                "icon": "./data/icons/instance_load.svg",
                "status": "Loads a .IAD instance",
                "action": "onClick"
            },
            {
                "type": "separator"
            },
            {
                "type": "button",
                "name": "Save Data CSV",
                "icon": "./data/icons/save_data_csv.svg",
                "status": "Saves data into a .CSV file",
                "action": "onClick"
            },
            {
                "type": "button",
                "name": "Save Data TXT",
                "icon": "./data/icons/save_data_txt.svg",
                "status": "Saves data into a .TXT file",
                "action": "onClick"
            }
        ]
    },
    "connection": {
        "settings": {
            "movable": "true",
            "floatable": "True",
            "position": "top"
        },
        "actions": [
            {
                "type": "button",
                "@id" : "btBoardInfo",
                "name": "Board Info",
                "icon": "./data/icons/info_board.svg",
                "status": "Info about the board",
                "action": "onBoardInfoClick"
            },
            {
                "type": "button",
                "name": "Connect",
                "icon": "./data/icons/ic_info_connection.svg",
                "status": "Connects to board",
                "action": "onConnectButtonClick"
            },
            {
                "type": "button",
                "name": "Sync Ports",
                "icon": "./data/icons/ic_sync_ports.svg",
                "status": "Looks again for Arduino ports",
                "action": "syncArduinoPorts"
            },
            {
                "type": "combobox",
                "@id" : "combobox_connected_ports",
                "name": "Items",
                "status": "Select connected ports",
                "action": "getArduinoPorts"
            },
            {
                "type": "label",
                "text": "Read Rate[Hz]:"
            },
            {
                "type": "spinbox",
                "@id": "readRateSpinbox",
                "name" : "Read Rate",
                "status" : "Listens to the port at this rate",
                "value" : "10",
                "min" : "1",
                "max" : "20",
                "action" : "setReadRate"
            },
            {
                "type": "button",
                "name": "Board Code",
                "icon": "./data/icons/ic_code.svg",
                "status": "Arduino code",
                "action": "onBoardCodeClick"
            }
        ]
    },
    "workspace": {
        "settings": {
            "movable": "True",
            "floatable": "True",
            "position": "top"
        },
        "actions": [
            {
                "type": "button",
                "name": "All notes",
                "icon": "./data/icons/notes.svg",
                "status": "All notes taken for this .IAD instance",
                "action": "onClick"
            },
            {
                "type": "button",
                "name": "Info",
                "icon": "./data/icons/ic_info.svg",
                "status": "Info about NOISR",
                "action": "doNothing"
            }
        ]
    },
    "parameters": {
        "settings": {
            "position": "top",
            "movable" : "True",
            "floatable" : "true"
        },
        "actions": [
            {
                "type" : "break"
            },
            {
                "type": "label",
                "text": "Threshold [V]:"
            },
            {
                "type": "lineEdit",
                "width": "50",
                "validator": "thresholdValidator"
            }
        ]
    },
    "numerics": {
        "settings": {
            "movable": "true",
            "floatable": "True",
            "position": "left"
        },
        "actions": [
            {
                "type": "button",
                "name": "Moving Average",
                "icon": "./data/icons/plot_mean.svg",
                "status": "Shows moving average for the signal",
                "action": "onClick"
            },
            {
                "type": "button",
                "name": "Maxima and Minima",
                "icon": "./data/icons/plot_peaktopeak.svg",
                "status": "Shows maxima and minima for the signal",
                "action": "onClick"
            },
            {
                "type": "button",
                "name": "Measures",
                "icon": "./data/icons/plot_measures.svg",
                "status": "Shows maximum and minimum for the signal",
                "action": "onClick"
            },
            {
                "type": "button",
                "name": "Threshold",
                "icon": "./data/icons/plot_tolerance.svg",
                "status": "Shows threshold for the signal",
                "action": "onClick"
            }
        ]
    }
}