{
    "file": {
        "settings": {
            "movable": "False",
            "floatable": "False",
            "position": "top"
        },
        "actions": [
            {
                "type": "button",
                "name": "New File",
                "icon": "./data/res/new.svg",
                "status": "Creates new .IAD instance",
                "action": "onClick"
            },
            {
                "type": "button",
                "name": "Save File",
                "icon": "./data/res/instance_save.svg",
                "status": "Save this .IAD instance",
                "action": "onClick"
            },
            {
                "type": "button",
                "name": "Load File",
                "icon": "./data/res/instance_load.svg",
                "status": "Loads a .IAD instance",
                "action": "onClick"
            },
            {
                "type": "separator"
            },
            {
                "type": "button",
                "name": "Save Data CSV",
                "icon": "./data/res/save_data_csv.svg",
                "status": "Saves data into a .CSV file",
                "action": "onClick"
            },
            {
                "type": "button",
                "name": "Save Data TXT",
                "icon": "./data/res/save_data_txt.svg",
                "status": "Saves data into a .TXT file",
                "action": "onClick"
            },
            {
                "type": "button",
                "name": "Save Data TXT",
                "icon": "./data/icons/new.svg",
                "status": "Saves data into a .TXT file",
                "action": "onClick"
            }
        ]
    },
    "connection": {
        "settings": {
            "movable": "true",
            "floatable": "True",
            "position": "top"
        },
        "actions": [
            {
                "type": "button",
                "name": "Board Info",
                "icon": "./data/res/info_board.svg",
                "status": "Provides info about the connected board",
                "action": "onClick"
            },
            {
                "type": "combobox",
                "name": "Items",
                "status": "Select connected ports",
                "action": "getPorts"
            },
            {
                "type": "label",
                "text": "rate:"
            },
            {
                "type": "spinbox"
            }
        ]
    },
    "workspace": {
        "settings": {
            "movable": "True",
            "floatable": "True",
            "position": "top"
        },
        "actions": [
            {
                "type": "button",
                "name": "All notes",
                "icon": "./data/res/notes.svg",
                "status": "All notes taken for this .IAD instance",
                "action": "onClick"
            }
        ]
    },
    "parameters": {
        "settings": {
            "position": "top",
            "movable" : "True",
            "floatable" : "true"
        },
        "actions": [
            {
                "type": "break"
            },
            {
                "type": "label",
                "text": "threshold (V):"
            },
            {
                "type": "lineEdit",
                "width": "50",
                "validator": "thresholdValidator"
            }
        ]
    },
    "numerics": {
        "settings": {
            "movable": "true",
            "floatable": "True",
            "position": "left"
        },
        "actions": [
            {
                "type": "button",
                "name": "Moving Average",
                "icon": "./data/res/plot_mean.svg",
                "status": "Shows moving average for the signal",
                "action": "onClick"
            },
            {
                "type": "button",
                "name": "Maxima and Minima",
                "icon": "./data/res/plot_peaktopeak.svg",
                "status": "Shows maxima and minima for the signal",
                "action": "onClick"
            },
            {
                "type": "button",
                "name": "Measures",
                "icon": "./data/res/plot_measures.svg",
                "status": "Shows maximum and minimum for the signal",
                "action": "onClick"
            },
            {
                "type": "button",
                "name": "Threshold",
                "icon": "./data/res/plot_tolerance.svg",
                "status": "Shows threshold for the signal",
                "action": "onClick"
            }
        ]
    }
}