{
    "file": {
        "settings": {
            "movable": "False",
            "floatable": "False",
            "position": "top"
        },
        "actions": [
            {
                "type": "button",
                "name": "New File",
                "icon": "./data/icons/ic_instance_new.svg",
                "status": "Creates new .IAD instance",
                "action": "onClick"
            },
            {
                "type": "button",
                "name": "Save File",
                "icon": "./data/icons/instance_save.svg",
                "status": "Save this .IAD instance",
                "action": "onClick"
            },
            {
                "type": "button",
                "name": "Load File",
                "icon": "./data/icons/instance_load.svg",
                "status": "Loads a .IAD instance",
                "action": "onClick"
            },
            {
                "type": "separator"
            },
            {
                "type": "button",
                "name": "Save Data CSV",
                "icon": "./data/icons/save_data_csv.svg",
                "status": "Saves data into a .CSV file",
                "action": "onClick"
            },
            {
                "type": "button",
                "name": "Save Data TXT",
                "icon": "./data/icons/save_data_txt.svg",
                "status": "Saves data into a .TXT file",
                "action": "onClick"
            }
        ]
    },
    "connection": {
        "settings": {
            "movable": "true",
            "floatable": "True",
            "position": "top"
        },
        "actions": [
            {
                "type": "button",
                "name": "Board Info",
                "icon": "./data/icons/info_board.svg",
                "status": "Info about the board",
                "action": "onClick"
            },
            {
                "type": "button",
                "name": "Connection Info",
                "icon": "./data/icons/ic_info_connection.svg",
                "status": "Info about the connection",
                "action": "onClick"                
            },
            {
                "type": "combobox",
                "name": "Items",
                "status": "Select connected ports",
                "action": "getPorts"
            },
            {
                "type": "label",
                "text": "rate:"
            },
            {
                "type": "spinbox"
            },
            {
                "type": "button",
                "name": "Board Code",
                "icon": "./data/icons/ic_code.svg",
                "status": "Arduino code",
                "action": "onClick"
            }
        ]
    },
    "workspace": {
        "settings": {
            "movable": "True",
            "floatable": "True",
            "position": "top"
        },
        "actions": [
            {
                "type": "button",
                "name": "All notes",
                "icon": "./data/icons/notes.svg",
                "status": "All notes taken for this .IAD instance",
                "action": "onClick"
            }
        ]
    },
    "parameters": {
        "settings": {
            "position": "bottom",
            "movable" : "True",
            "floatable" : "true"
        },
        "actions": [

            {
                "type": "label",
                "text": "threshold (V):"
            },
            {
                "type": "lineEdit",
                "width": "50",
                "validator": "thresholdValidator"
            }
        ]
    },
    "numerics": {
        "settings": {
            "movable": "true",
            "floatable": "True",
            "position": "left"
        },
        "actions": [
            {
                "type": "button",
                "name": "Moving Average",
                "icon": "./data/icons/plot_mean.svg",
                "status": "Shows moving average for the signal",
                "action": "onClick"
            },
            {
                "type": "button",
                "name": "Maxima and Minima",
                "icon": "./data/icons/plot_peaktopeak.svg",
                "status": "Shows maxima and minima for the signal",
                "action": "onClick"
            },
            {
                "type": "button",
                "name": "Measures",
                "icon": "./data/icons/plot_measures.svg",
                "status": "Shows maximum and minimum for the signal",
                "action": "onClick"
            },
            {
                "type": "button",
                "name": "Threshold",
                "icon": "./data/icons/plot_tolerance.svg",
                "status": "Shows threshold for the signal",
                "action": "onClick"
            }
        ]
    }
}